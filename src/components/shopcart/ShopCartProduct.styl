    mt(12)
  }
}
.price-tip-column{
  flex()
  flex-direction column
  align-items center
  div{
    width fit-content
    inline()
  }
}

.item-box,.product-wrap-shop{
  zoom:1
}
.item-box:after,.product-wrap-shop:after{
  clear: both;
  display: block;
  content: "";
  visibility: hidden;
  height: 0;
  font-size: 0;
}