}
.text-through{
  text-decoration:line-through
}

.product-price-column{
  flex()
  flex-center()
  .price-tag{
    c(#fff)
    bg(#E53935)
    w(16)
    h(16)
    lh(16)
    text-c()
    mr(6)
  }
}
.price-elide{
  c(#666)
  mt(8)
}

.notice-tag-column{
  height 50px;
  display flex;
  align-items center;
  font-size 12px;
  padding 0 24px 0 16px;
  .label{
    font-size 10px;
    color #E53935;
    border 1px solid #E53935;
    border-radius 2px;
    width 28px;
    height 18px;
    line-height 18px;
    text-align center;
    box-sizing border-box;
  }
  .content{
    color #666;
    margin 0 16px 0 8px;
  }
  .btn{
    color #333;
    cp()
    &:hover{
      c(#E53935)
    }
  }
}
