.item-box{
  padding 16px 24px 16px 16px;
  /*display flex;*/
}
.select-bg{
  background #FFF4E8;
}
.item-left{
  margin-right 10px;
  float left
}
.checker{
  display inline-block;
  width: 16px;
  height: 16px;
  margin-right: 8px;
  background-image url(../../assets/images/weigouxuanyouhuo_ic@3x.png)
  background-size contain
  background-repeat no-repeat
  background-position center
  cursor pointer
}
.checked{
  background-image url(../../assets/images/yigouxuan.png)
}
.not-choose{
  background-image url(../../assets/images/bukegouxuan_youhuiquan.png) !important
}
.item-right{
/*  flex 1;
  -webkit-flex 1;
  display block;*/
}
.product-wrap-shop{
  /*display flex;*/
  width 100%
}
.product-info{
/*  -webkit-flex: 2;
  flex: 2;
  display: flex;*/
  float left
  width 36%
  color #666;
  font-size 12px;
  .product-pic{
    width 80px;
    height 80px;
    margin-right 12px;
    cursor pointer;
    inline()
    float left
    bg(#fff)
    box-sizing border-box
    img{
      position relative
      left 50%
      top 50%
 /*     transform translate(-50%,-50%)*/
      ml(-40)
      mt(-40)
      border 1px solid #EDEDED
    }
  }
  .product-detail{
/*    flex 1;
    -webkit-flex 1;
    display flex;
    flex-direction column;*/
    inline()
    position relative
    h(80)
    min-width 300px
    h5{
      font-size 14px;
      color #333;
      cursor pointer;
      text-overflow: ellipsis; display: -webkit-box;  -webkit-box-orient: vertical; overflow : hidden;-webkit-line-clamp: 1;
      max-width 320px;
      line-height 1.3;
    }
    .product-join-activity{
      mt(8)
      c(#E53935)
      cp()
    }
    .product-detail-spec{
      margin-top 12px;
      .spec{
        margin-right 16px;
      }
    }
  }
}
.product-price{
/*  flex 1;
  -webkit-flex 1;
  display block;*/
  float left
  width 20%
  text-align center;
  padding-right 40px;
  .price-amount{
    display inline-block;
    color #333;
    margin-bottom 8px;
  }
  .price-reduce{
    display inline-block;
    font-size 10px;
    color #E53935;
    border 1px solid #E53935;
    border-radius 2px;
    padding 1px 3px;
    margin-bottom 4px;
  }
}
.product-subtract{
/*  flex 1;
  -webkit-flex 1;
  flex-direction column;
  align-items center;*/
  float left
  width 20%
  pl(50)
  .product-subtract-t{
    flex()
    align-items center
    .dw{
      ml(6)
    }
  }
  .limit-label{
    margin-top 8px;
    font-size 12px;
    .black{
      color #212121;
      mr(12)
    }
  }
  .purchase-label{
    mt(8)
    c(#E53935)
  }
}
.product-edit{
/*  flex 1;
  -webkit-flex 1;*/
  float right
  width 10%
  display block;
  text-align right;
  color #666;
  >div:first-child{
    margin-right 16px;
    margin-bottom 8px;
  }
  >div{
    span{
      cursor pointer;
    }
  }
}
.tags-wrap-b{
/*  .product-bottom{
    hide()
  }
  .product-bottom:first-child{
    display block
  }*/
  ml(30)
}
.product-bottom{
  margin-top 16px;
  color #666;
