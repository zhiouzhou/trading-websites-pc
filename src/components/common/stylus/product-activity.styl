.ac-product-box {
  w(238);
  mt(10);
  mr(10);
  flex()
  flex-direction column
  float left
  bg(#fff)
  position relative
  h(360)
  border 1px solid #EDEDED
  box-sizing border-box
  &:nth-of-type(4n) {
    mr(0);
  }

  &:nth-last-of-type(1) {
    mr(0);
  }
}

@media screen and (min-width: 1230px) {
  .ac-product-box {
    w(232);

    &:nth-of-type(4n) {
      mr(10);
    }

    &:nth-of-type(5n) {
      mr(0);
    }

    &:nth-last-of-type(1) {
      mr(0);
    }
  }
}
.h-390{
  h(390)
}
.acp-top{
  padding 12px 16px
  position relative
  cp()
  .acp-top-pic{
    position relative
    min-height 200px
    >img{
      inline()
      max-height 210px
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
    }
  }
  .acp-top-kucun{
    position absolute
    left 0
    bottom 0
    h(22)
    lh(22)
    text-c()
    c(#fff)
    ft(12)
    background rgba(0,0,0,0.5)
    width 100%
    opacity 0
    transition: all .5s
  }
  .acp-top-water{
    position absolute
    left 0
    top 0
    w(56)
    h(56)
    img{
      margin 0
    }
    z-index 3
  }
  .acp-top-reduce{
    bg(#F0593A)
    w(40)
    h(22)
    position absolute
    right 12px
    top 0
    flex()
    flex-direction column
    align-items center
    c(#fff)
    >span:first-child{
      mt(8)
      mb(2)
    }
    &:before{
      content ""
      position absolute
      w(40)
      h(40)
      border-radius 50%
      bottom -20px
      bg(#F0593A)
    }
  }
  .acp-top-gone{
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 0
    background rgba(255,255,255,0.6)
    &:before{
      content ""
      position absolute
      left 50%
      top 50%
      w(96)
      h(96)
      background-image url(../../assets/images/yiqiangguang.png)
      background-size contain
      background-repeat no-repeat
      background-position center
      transform translate(-50%,-50%)
      z-index 9
    }
  }
}
.acp-content{
  flex-1()
  padding 0 16px
  flex()
  flex-direction column
  cp()
  >h5{
    ft(16)
    c(#333)
    text-overflow: ellipsis; display: -webkit-box;  -webkit-box-orient: vertical; overflow : hidden;-webkit-line-clamp: 1;
    line-height 1.3
    font-weight 500
    span{
      ft(16)
      c(#333)
      font-weight 500
    }
  }
  .acp-content-spec{
    ft(12)
    c(#999)
    mb(10)
    mt(10)
    flex()
    .date{
      ml(16)
    }
  }
  .acp-content-price{
    .price-tag{
      ft(12)
      bg(#E53935)
      c(#fff)
      padding 0 2px
      border-radius 2px
      mr(4)
    }
  }
  .acp-content-self-pick{
    opacity 1
    transition: all .5s
    mt(10)
    span{
      inline()
      ft(12)
      c(#E53935)
      border 1px solid #E53935
      border-radius 2px
      padding 1px 3px
      mr(6)
    }
    i{
      inline()
      ft(12)
      c(#E53935)
      border 1px solid #E53935
      border-radius 2px
      padding 1px 0px
      w(15)
      text-align center
      mr(6)
    }
  }
  .acp-content-preferential{
    mb(10)
    >span{
      position relative
      mr(10)
    }
    >span:before{
      content ""
      position absolute
      right -10px
      top -10%
      w(1)
      height 120%
      bg(#BDBDBD)
    }
    >span:last-child:before{
      content ""
      background transparent
    }
  }
}
.acp-gather{
  padding 6px
  margin 0 8px
  border-top 1px dashed #BDBDBD
  box-sizing border-box
  flex()
  >span{
    c(#333)
    w(40)
  }
  >p{
    ml(-8)
    c(#999)
    inline()
    line-height 1.3
  }
}
.ml-16{
  ml(16)
}

.acp-bottom {
    width: 100%;
    height: 42px;
    pos(absolute);
    bottom: 0;
    left: 0;
    bg(#fff);
    flex();
    hide();
    box();
    transform: translateY(0);
    border-top: 1px solid #ededed;

    .acp-bottom-wrap {
      flex-1();
      >span{
        ml(4)
      }
    }

    >a {
      block();
      text-c();
      lh(42);
      c(#fff);
      ft(12);
      bg(#FFA727);
      width: 70px;
    }
  }
.ac-product-box {
  overflow: hidden;
  &:hover {
    .acp-content-self-pick{
      opacity 0
    }
    .acp-bottom {
      flex();
      animation: m_enter 0.5s;
    }
    .acp-top-kucun{
      opacity 1
    }
    .acp-gather{
      border-top 1px solid transparent
    }
    .b_p_munber {
      block();
      visibility: visible;
      animation: m_enter 0.5s;
    }
  }
}

.b_p_munber {
  width: 100%;
  height: 42px;
  pos(absolute);
  bottom: 0;
  left: 0;
  bg(#fff);
  hide();
  visibility: hidden;
  box();
  transform: translateY(0);
  border-top: 1px solid #ededed;
  >a {
    frt()
    block();
    text-c();
    lh(42);
    c(#fff);
    ft(12);
    bg(#FFA727);
    width: 70px;
  }
}

@keyframes m_enter {
  0% {
    transform: translateY(42px);
    opacity: 0.1;
  }

  100% {
    transform: translateY(0px);
    opacity: 1;
  }
}