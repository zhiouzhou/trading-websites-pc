      }
    }
  }
  .p-tips-column{
    c(#666)
    ft(14)
    padding 14px 0;
    border-top 1px dashed #E5E5E5;
    border-bottom 1px dashed #E5E5E5;
    flex()
    align-items center
    >span{
      inline()
      c(#E53935)
      mr(30)
    }
  }
  .p-cx-column{
    c(#999)
    ft(14)
    flex()
    padding 16px 0
    border-bottom 1px dashed #E5E5E5
    .title{
      mr(30)
      min-width 30px
    }
    .list{
      flex-1()
      flex-direction column;
      c(#666)
    }
    .tag{
      ft(12)
      flex()
      align-items center
      mb(12)
      pr(30)
      .first{
        c(#E53935)
        border 1px solid #E53935
        w(56)
        h(20)
        lh(20)
        text-c()
        border 1px solid #E53935;
        radius(2)
        min-width 58px
      }
      .last{
        position relative
        pr(25)
        i{
          right 0
          top 2px
          position absolute
          w(12)
          h(6)
          background-image url(../../assets/images/bankMore-down.png)
          background-size contain
          background-repeat no-repeat
          background-position center
        }
      }
      p{
        margin 0 12px;
        flex-1()
        line-height 1.5
      }
    }
    .tag:last-child{
      margin-bottom 0;
    }
  }
.p-ads-column{
  flex()
  c(#999)
  ft(14)
  mt(20)
  >span{
    mr(30)
  }
  .address{
    flex-1()
    pr(30)
    .default{
      flex()
      flex-center()
      >span{
        flex-1()
        mauto(12)
        c(#666)
      }
      .dw{
        w(12)
        h(16)
        background-image url(../../assets/images/location_red_ic.png)
        background-size contain
        background-repeat no-repeat
        background-position center
      }
      .xz{
        w(12)
        h(6)
        background-image url(../../assets/images/bankMore-down.png)
        background-size contain
        background-repeat no-repeat
        background-position center
        cp()
      }
    }
    .all{
      mt(20)
      ft(14)
      c(#666)
      .title{
        c(#333)
        ft(14)
        mb(12)
      }
      .ads-list{
        li{
          mb(12)
          ft(14)
          flex()
          align-items center
          cp()
          i{
            inline()
            w(12)
            h(16)
            background-image url(../../assets/images/ic_dingweihui.png)
            background-size contain
            background-repeat no-repeat
            background-position center
            mr(12)
          }
          &:hover{
            c(#E53935)
            i{
              background-image url(../../assets/images/ic_dingweihong.png)
            }
          }
        }
      }
    }
  }
  .address-unfold{
    position relative
    &:before{
      content ""
      position absolute
      border 1px solid #ededed
      width 100%
      height 100%
      transform: scale(1,1.2) translateX(-2%);
      z-index: -1;
    }
    .default{
      .xz{
        transform rotate(180deg)
      }
    }
  }
}
  .p-spec-column{
    flex()
    align-items center
    c(#999)
    ft(14)
    mt(20)
