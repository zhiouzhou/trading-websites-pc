    width: unit(x, 'px')
    height : unit(x, 'px')
}
box(){
    box-sizing border-box
}
radius(){
     border-radius unit(arguments, 'px')
}
flex(){
    display: block;
    display: flex;
}
flex-1(){
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: auto;
}
flex-center(){
   display: block;
   display: flex;
   justify-content: center;
   align-items: center;
}
b1(x){
    border 1px solid x
}
cp(){
    cursor pointer
}
omit(){
    text-overflow :ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
vm(){
    vertical-align: middle
}
flt(){
    float left
}
