  height: unit(arguments, 'px')    
}
ft(){
   font-size unit(arguments, 'px')
}
lh(){
    line-height unit(arguments, 'px')
}
c(){
    color arguments
}
bg(){
    background arguments
}
pos(){
    position arguments
}
block(){
    display block
}
inline(){
    display inline-block
}
hide(){
    display none
}
mt(x){
    margin-top: unit(x, 'px')
}
mb(x){
    margin-bottom: unit(x, 'px')
}
mr(x){
    margin-right: unit(x, 'px')
}
ml(x){
    margin-left: unit(x, 'px')
}
